---
interface Props {
	dashboard: string;
  cards: string;
  accounts: string;

  language_path: string;

  dashboard_text: string;
  cards_text: string;
  accounts_text: string;
  add_text: string;
  add_path: string;
  logout_text: string;
  language_text: string;

}

const { dashboard, cards, accounts, dashboard_text, cards_text, accounts_text, add_text, logout_text, language_text, language_path, add_path} = Astro.props;
---

<nav>
  <div id="mobile-bar">
    <img src="/logo.svg" alt="logo" id="mobile-logo">
    <a href="javascript:void(0);" class="icon" id="activate">
      <box-icon name='sidebar' color='white'></box-icon>
    </a>
  </div>

  <ul class="sidebar" id="sidebar">
    <img src="/logo.svg" alt="logo" id="logo">

    <a href={language_path}>
      <li class="menu-item">
        <box-icon type='solid' name='flag-alt' color="white"></box-icon>
        <span class="label">{language_text}</span>
      </li>
    </a>
    

    <li class="line"></li>

    <a href={dashboard}>
      <li class="menu-item">
        <box-icon type='solid' name='dashboard' color="white"></box-icon>
        <span class="label">{dashboard_text}</span>
      </li>
    </a>

    <a href={cards}>
      <li class="menu-item">
        <box-icon type='solid' name='credit-card' color="white"></box-icon>
        <span class="label">{cards_text}</span>
      </li>
    </a>

    <a href={accounts}>
      <li class="menu-item">
        <box-icon type='solid' name='bank' color="white"></box-icon>
        <span class="label">{accounts_text}</span>
      </li>
    </a>

    <li class="line"></li>

    <a href={add_path}>
      <li class="menu-item">
        <box-icon type='solid' name='plus-circle' color="white"></box-icon>
        <span class="label">{add_text}</span>
      </li>
    </a>

    <a href="/">
      <li class="menu-item">
        <box-icon type='solid' name='exit' color="white"></box-icon>
        <span class="label">{logout_text}</span>
      </li>
    </a>
  </ul>
</nav>

<style>

.sidebar {
  display: flex;
  flex-direction: column;
  position: fixed;
  top: 0;
  left: 0;
  height: 100vh;
  width: 256px;
  padding: 0;
  margin: 0;
  padding-top: 40px;
  background: #1F2937;
  border-right: solid 1px #374151;
}

.menu-item {
  transition: width 0.5s cubic-bezier(0.42, 0, 0.58, 1);
  margin: 4px 16px;
  opacity: 1;
}

.sidebar:hover .label {
   opacity: 1; 
}

.menu-item { 
  padding: 12px;
  text-decoration: none;
  display: flex; 
  gap: 8px; 
  align-items: 
  center; 
  cursor: pointer; 
  transition: all 0.6s cubic-bezier(0.22, 1, 0.36, 1);
}

.menu-item:hover {
  background: #374151;
  color: white;
  border-radius: 64px;
}

.label {
  opacity: 1;
  transition: opacity 0.4s ease-in-out; 
  font-weight: 500;
  font-size: 16px;
}

.line {
  margin: 8px 16px;
  text-decoration: none;
  display: flex;
  gap: 8px;
  align-items: center;
  cursor: pointer;
  background: #374151;
  height: 1px;
}

box-icon {
  opacity: 1;
}

#logo {
  margin: 16px 32px 64px 32px;
}

a {
  text-decoration: none;
  color: white;
}

#mobile-bar {
  display: none;
}

@media only screen and (max-width: 1000px) {
  .sidebar {
    left: -320px;
    width: 292px;
    transition: left 0.5s;
    z-index: 998;
  }

  .sidebar.active {
    left: 0;
  }

  #activate {
    width: 48px;
    height: 48px;
    font-size: 32px;
    border-radius: 8px;
    background: #1F2937;
    border: 1px solid #374151;
    color: white;
    justify-content: center;
    align-items: center;
    display: flex;
    z-index: 999;
  }

  #mobile-bar {
    display: flex;
    justify-content: space-between;
    margin-bottom: 40px;
    padding: 16px 0;
    border-bottom: 1px solid #1F2937;
    overflow: hidden;
  }

  #mobile-logo {
    width: 192px;
  }

  #logo {
    display: none;
  }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
  const toggleBar = () => {
    const sidebar = document.querySelector(".sidebar");
    sidebar?.classList.toggle("active");
  };

  const activateButton = document.getElementById("activate");
  activateButton?.addEventListener("click", toggleBar);
});
</script>
