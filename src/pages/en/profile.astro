---

interface Props {
	username: string;
}

const { username } = Astro.props;

export const prerender = false

import Prof from "../../components/Profile.astro";
import SideBar from "../../components/SideBar.astro";
import Scripts from "../../components/Scripts.astro";
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Profile | BancaOnline">
    <main>
        <SideBar
			dashboard="../en/",
			cards="/en/cards",
			accounts='/en/accounts'

			dashboard_text='Dashboard',
			cards_text='Cards',
			accounts_text='Accounts',
			add_text='Add New Account',
			logout_text="Log out",

			language_text="Switch to Italian",
			language_path='../it/',

			add_path='new/'
		>
	    </SideBar>

        <Prof
			username= "Marco Esposito",
			corr_text="Correspondences",
			card_text="Credit Card",
			account_text="Bank Account"
		>
		</Prof>
    </main>
</Layout>


<style>
    main {
		margin-left: 256px;
		padding: 1rem;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}

    @media only screen and (max-width: 1000px) {
		main {
			margin: auto;
			padding: 1rem;
			max-width: calc(100% - 2rem);
			color: white;
			font-size: 20px;
			line-height: 1.6;
		}

		.grid {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(18ch, 1fr));
			gap: 16px;
			padding: 0;
		}

	}
</style>

<Scripts></Scripts>